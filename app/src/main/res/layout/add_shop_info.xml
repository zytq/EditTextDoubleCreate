<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">
    <ImageView
        android:id="@+id/iv_minus"
        android:src="@mipmap/icon_minus_photo"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_param_key"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_minus"
        android:layout_marginLeft="@dimen/padding_8"
        android:hint="@string/please_input_key"
        android:textColor="@color/black40"
        android:textSize="@dimen/smaller_size" />

    <EditText
        android:id="@+id/et_param_value"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/smallest_size"
        android:hint="@string/please_input_content"
        android:textColor="@color/black40"
        android:textColorHint="@color/black40"
        android:textSize="@dimen/smaller_size" />

</RelativeLayout>
